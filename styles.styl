/* general styles */
body
	background-color #00c5cd
	padding 20px 0px
	margin 0
	font-family Geneva
#simulator
	background-color white
	width 80%
	height 100%
	margin 0 auto
	padding 30px
	border 5px solid #088da5
	border-radius 20px
h1
	font-family 'Indie Flower', cursive
	text-align center
	font-size 3em
button
	padding 15px
	width 24%
	border-radius 10px
	font-size 0.7em
	border none
	background-color #088da5
	color white
	margin-bottom 20px
button:hover
	background-color #00c5cd
	cursor pointer
#display1, #display2, #display3, #display4
	width 24.1%
	display inline-block
	margin 0px

/* class for styling words */
.styleWords
